{
  "type": "object",
  "properties": {
    "myAssignments": {
      "type": "array",
      "selectorAll": "[bgcolor]",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 3
          },
          "Category": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 6
          },
          "severity": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 7
          },
          "update_date": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 9
          },
          "summary": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 10
          },
          "status": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 8
          },
          "color": {
            "type": "string",
            "control": "property.innerHTML",
            "selector": "td"
          }
        }
      }
    },
    "isMyView": {
      "type": "identifier",
      "selector": "table",
      "control": "exists",
      "selectContains": "Viewing Issues"
    },
    "orderbySeverity": {
      "type": "action",
      "selector": "a",
      "control": "action.link",
      "selectContains": "Severity"
    },
    "colors": {
      "type": "array",
      "selectorAll": "#buglist",
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "selector": "tr",
            "control": "property.innerHTML"
          }
        }
      }
    }
  },
  "connect": [
    {
      "match": [
        "isMyView"
      ],
      "screens": [
        "myassignments"
      ],
      "model": "MyView"
    },
    {
      "match": [
        "isMyView"
      ],
      "action": "orderbySeverity"
    }
  ]
}
