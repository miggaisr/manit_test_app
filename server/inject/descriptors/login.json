{
  "type": "object",
  "properties": {
    "isLogin": {
      "type": "identifier",
      "selector": "[name='login_form']",
      "control": "exists"
    },
    "username": {
      "type": "string",
      "selector": "[name=\"username\"]",
      "control": "text"
    },
    "password": {
      "type": "string",
      "selector": "[name=\"password\"]",
      "control": "text"
    },
    "error_message": {
      "type": "string",
      "selector": "div",
      "control": "property.innerText",
      "selectContains": "password you entered is incorrect"
    },
    "loginButton": {
      "type": "action",
      "selector": ".button",
      "control": "action.button"
    }
  },
  "connect": [
    {
      "match": [
        "isLogin"
      ],
      "screens": [
        "logincool"
      ]
    },
    {
      "match": [
        "isLogin"
      ],
      "action": "loginButton"
    }
  ]
}
